<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:mvc="http://www.springframework.org/schema/mvc"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:util="http://www.springframework.org/schema/util"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://www.springframework.org/schema/mvc
    http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.0.xsd
    http://www.springframework.org/schema/util
    http://www.springframework.org/schema/util/spring-util.xsd">

  <!-- Auto-load Controllers located at com.doflamingo.test.* -->
  <context:component-scan base-package="com.doflamingo.test" />
  <mvc:annotation-driven />

  <!-- Views are located at /WEB-INF/views/*.jsp -->
  <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
    <property name="prefix" value="/WEB-INF/views/" />
    <property name="suffix" value=".jsp" />
  </bean>

  <!-- Parse property file when starting the server -->
  <context:property-placeholder location="/WEB-INF/doflamingo.properties" />

  <websocket:handlers>
    <websocket:mapping handler="websocketHandler" path="/websocket">
    </websocket:mapping></websocket:handlers>

  <bean id="websocketHandler" class="com.doflamingo.server.websocket" />

</beans>
